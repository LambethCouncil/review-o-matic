<!DOCTYPE html>
<html>
  <head>
    <title>Reviewomatic</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= yield :custom_assets %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <h1 class="left"><%= link_to "Review-O-Matic", root_path %></h1>
    </header>

    <% flash.each do |name, message| %>
      <p class="flash flash_<%= name %>"><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
